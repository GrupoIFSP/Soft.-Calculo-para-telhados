#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

float calculo(float larg, float comp)
{
    float area2;

    area2 = (larg*2)+(comp*2);
    return area2;
}
int main()
{
    float larg,comp,oper;

    printf("\t\tInforme o comprimento do telhado: \n\t\t");
    scanf("%f", &comp);

    printf("\t\tInforme a largura do telhado: \n\t\t");
    scanf("%f", &larg);

    oper = calculo(comp,larg);

    printf("\t\tVoce possui: %.2f m2, \n\n\t\t\tEscolha o tipo de telha desejada \n\t\t", oper);

        printf("\n\t\t(1)- Telha unitaria, com 30CM de Largura e 10CM de Comprimento\n\t\t");
        printf("\n\t\t(2)- Telha Brasilit, com 2,30CM de Largura e 1,10CM de compimento\n\t\t");

   int esc;
        scanf("%d", &esc);

    switch(esc)
    {

        case 1:
        {
            printf("\t\tvoce escolheu a opcao 1");
            break;
        }
        case 2:
        {
            printf("\t\tVoce escolheu a opcao 2");
            break;
        }
        default:
         {
              printf("\t\tPor favor escolha uma das opcoes");


         }
    }

}

